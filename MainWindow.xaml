<Window x:Class="SENG403.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SENG403"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized" ResizeMode="NoResize">
    <Canvas Visibility="Visible">
        <Canvas x:Name="canvasAlarmSet" Visibility="Hidden">
            <Canvas x:Name="canvasDayOptions" Height="135.686" Canvas.Left="96.333" Canvas.Top="161.487" Width="81.198">
                <CheckBox x:Name="checkBox_Sunday" Content="Sunday" Checked="checkedSunday"/>
                <CheckBox x:Name="checkBox_Monday" Content="Monday" Canvas.Top="20.098" Checked="checkedMonday"/>
                <CheckBox x:Name="checkBox_Tuesday" Content="Tuesday" Canvas.Top="40.196" Checked="checkedTuesday"/>
                <CheckBox x:Name="checkBox_Wednesday" Content="Wednesday" Canvas.Top="60.294" Checked="checkedWednesday"/>
                <CheckBox x:Name="checkBox_Thursday" Content="Thursday" Canvas.Top="80.392" Checked="checkedThursday"/>
                <CheckBox x:Name="checkBox_Friday" Content="Friday" Canvas.Top="100.49" Checked="checkedFriday"/>
                <CheckBox x:Name="checkBox_Saturday" Content="Saturday" Canvas.Top="120.588" Checked="checkedSaturday"/>
            </Canvas>
            <Canvas x:Name="canvasSnoozeOptions" Height="134.72" Canvas.Left="206.333" Canvas.Top="162.453" Width="78.03">
                <RadioButton x:Name="radioButton_1min" Content="1   Minute" Checked="select1Min"/>
                <RadioButton x:Name="radioButton_2mins" Content="2   Minutes" Canvas.Top="19.96" Checked="select2Mins"/>
                <RadioButton x:Name="radioButton_5mins" Content="5   Minutes" Canvas.Top="39.92" Checked="select5Mins"/>
                <RadioButton x:Name="radioButton_10mins" Content="10 Minutes" Canvas.Top="59.88" Checked="select10Mins"/>
                <RadioButton x:Name="radioButton_15mins" Content="15 Minutes" Canvas.Top="79.84" Checked="select15Mins"/>
                <RadioButton x:Name="radioButton_30mins" Content="30 Minutes" Canvas.Top="99.8" Checked="select30Mins"/>
                <RadioButton x:Name="radioButton_60mins" Content="60 Minutes" Canvas.Top="119.76" Checked="select60Mins"/>
            </Canvas>
            <TextBox x:Name="textBoxHourEntry" Height="98.666" Canvas.Left="137.667" TextWrapping="Wrap" Canvas.Top="10.666" Width="98.667" FontSize="48" TextAlignment="Center"/>
            <TextBox x:Name="textBoxMinuteEntry" Height="98.666" Canvas.Left="266.741" TextWrapping="Wrap" Canvas.Top="10.666" Width="98.667" FontSize="48" TextAlignment="Center"/>
            <Label x:Name="labelDays" Content="Days" Canvas.Left="93.333" Canvas.Top="127.666" FontSize="16"/>
            <Label x:Name="labelSnooze" Content="Snooze" Canvas.Left="203.333" Canvas.Top="127.666" FontSize="16"/>
            <Label x:Name="labelColon" Content=":" Canvas.Left="241.334" Canvas.Top="16.998" FontSize="48"/>
            <Button x:Name="buttonConfirmAlarm" Content="Confirm" Canvas.Left="326.741" Canvas.Top="259.479" Width="170.259" Height="38.008" Click="clickButtonConfirm"/>
            <Button x:Name="button" Content="Cancel" Canvas.Left="466" Canvas.Top="10.666" Width="45" Height="45" Click="clickButtonCancel"/>
            <ComboBox x:Name="comboBoxSounds" Canvas.Left="326.741" Canvas.Top="162.453" Width="170.259" DataContextChanged="selectedSound"/>
            <Label x:Name="labelSnooze_Copy" Content="Sound" Canvas.Left="327.337" Canvas.Top="127.666" FontSize="16"/>
            <CheckBox x:Name="checkBoxRepeat" Content="Repeat Weekly" Canvas.Left="326" Canvas.Top="211" Checked="repeatWeeklyIsChecked"/>
        </Canvas>

        <Canvas x:Name="canvasAlarmActive" Visibility="Hidden">
            <Button x:Name="buttonDismissAlarm" Content="Dismiss" Canvas.Left="392" Canvas.Top="10" Width="115" Height="63.96" Click="clickDismiss"/>
            <Label x:Name="labelCurrentTime" Content="" Canvas.Left="128" Canvas.Top="87" Height="98.666" Width="250" FontSize="48" BorderBrush="Black" BorderThickness="1"/>
            <Button x:Name="buttonSnoozeAlarm" Content="Snooze" Canvas.Left="128" Canvas.Top="237.605" Width="250" Height="49.75" Click="clickSnooze"/>
        </Canvas>

        <Canvas x:Name="canvasTimeDisplayBase" Visibility="Visible">
            <Canvas x:Name="canvasTimeDisplaySidebar" Height="349" Canvas.Left="361" Width="163" Background="#FF443939">
                <Button x:Name="buttonSetAlarm" Content="Set Alarm" Canvas.Left="30" Canvas.Top="45" Width="107" Height="55.96" Click="gotoSetAlarm"/>
            </Canvas>
            <Canvas x:Name="canvasTimeDisplayDigital" Height="267" Width="354" Visibility="Hidden">
                <Label x:Name="labelDigitalTime" Content="" Canvas.Left="51" Canvas.Top="83" Height="98.666" Width="250" FontSize="48" BorderBrush="Black" BorderThickness="1"/>
            </Canvas>
            <Canvas x:Name="canvasTimeDisplayBottom" Height="52" Canvas.Top="288.03" Width="354" Background="White">
                <ToggleButton x:Name="toggleButtonDisplayMode" Content="Analog/Digital" Canvas.Left="263.913" Canvas.Top="10" Height="32" Click="displayModeToggle"/>
            </Canvas>
            <Canvas x:Name="canvasTimeDisplayAnalog" Margin="0,0,163,52" Visibility="Visible">
                <Ellipse x:Name="tempAnalogClock" Fill="#FFF4F4F5" Height="100" Canvas.Left="126" Stroke="Black" Canvas.Top="91" Width="100"/>
            </Canvas>
        </Canvas>
        

    </Canvas>
</Window>
