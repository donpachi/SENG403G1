<Window x:Class="SENG403.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SENG403"
        mc:Ignorable="d"
        Title="Clock" Height="600" Width="725">
    <Canvas Background="#FF141734">
        <Image x:Name="clock_canvas_image" Height="300" Canvas.Left="70" Canvas.Top="60" Width="300" Source="pack://application:,,,/Resource/clock_canvas.png"/>
        <Image x:Name="second_hand_image" Height="300" Canvas.Left="70" Canvas.Top="60" Width="300" Source="pack://application:,,,/Resource/second_hand.png"/>
        <Image x:Name="hour_hand_image" Height="300" Canvas.Left="70" Canvas.Top="60" Width="300" Source="pack://application:,,,/Resource/hour_hand.png"/>
        <Image x:Name="minute_hand_image" Height="300" Canvas.Left="70" Canvas.Top="60" Width="300" Source="pack://application:,,,/Resource/minute_hand.png"/>
        <Label x:Name="time_label" Content="00 : 00 : 00" Canvas.Left="70" Canvas.Top="390" Width="300" Height="107" FontSize="40"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Verdana"/>

    </Canvas>
</Window>
