<Window x:Class="SENG403.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SENG403"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="timeLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="55" Margin="115,44,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;&#xD;&#xA;" VerticalAlignment="Top" Width="245" FontSize="18"/>
        <TextBox x:Name="setAlarmTextBox" HorizontalAlignment="Left" Height="23" Margin="115,165,0,0" TextWrapping="Wrap" Text="hh:mm:ss" VerticalAlignment="Top" Width="120" GotFocus="setAlarmTextBox_GotFocus" TextDecorations="{x:Null}"/>
        <Button x:Name="setAlarmButton" Content="Set Alarm" HorizontalAlignment="Left" Margin="365,166,0,0" VerticalAlignment="Top" Width="75" Click="setAlarmButton_Click"/>
        <ComboBox x:Name="AmPmBox" HorizontalAlignment="Left" Margin="240,165,0,0" VerticalAlignment="Top" Width="120" MaxDropDownHeight="120" AllowDrop="True" Text="AM">
            <ComboBoxItem x:Name="AM" Content="AM"/>
            <ComboBoxItem x:Name="PM" Content="PM" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="35,166,0,0" TextWrapping="Wrap" Text="Set Alarm:" VerticalAlignment="Top" Height="22" Width="75"/>
        <Button x:Name="snoozeButton" Content="Snooze" HorizontalAlignment="Left" Margin="115,208,0,0" VerticalAlignment="Top" Width="75" Click="snoozeButton_Click"/>
    </Grid>
</Window>
